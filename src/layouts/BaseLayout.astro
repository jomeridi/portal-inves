---
import '../styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { SITE } from '@config/site';
import { languages } from '../i18n/ui';

// Detectamos si el sitio es el de pruebas (GitHub) para aplicar privacidad
const isTestSite = import.meta.env.SITE?.includes('jomeridi.github.io');

interface Props {
  title?: string;
  description?: string;
}

const currentPathname = Astro.url.pathname;

// Detect current locale from pathname
const segments = currentPathname.split('/').filter(Boolean);
const currentLocale = (segments[0] && Object.keys(languages).includes(segments[0])) ? segments[0] : 'es';
const siteInfo = SITE[currentLocale as keyof typeof SITE] || SITE.es;

const { 
  title = siteInfo.title, 
  description = siteInfo.description 
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    {isTestSite && <meta name="robots" content="noindex, nofollow" />}
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + 'favicon.svg'} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="flex min-h-screen flex-col bg-white font-sans text-neutral-900 antialiased">
    <Header currentPathname={currentPathname} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

