---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/home/PremiumHero.astro';
import ServiceHighlights from '../../components/home/ServiceHighlights.astro';
import ImageGrid from '../../components/home/ImageGrid.astro';
import StatBar from '../../components/home/StatBar.astro';
import UniversityList from '../../components/home/UniversityList.astro';
import TechnologyInnovation from '../../components/home/TechnologyInnovation.astro';
// import ProcessWorkflow from '../../components/home/ProcessWorkflow.astro';
// import Testimonials from '../../components/home/Testimonials.astro';
import PremiumCTA from '../../components/home/PremiumCTA.astro';

import { ui } from '../../i18n/ui';
const t = ui.es;
---

<BaseLayout>
  <PremiumHero 
    title={t['hero.title']}
    subtitle={t['hero.subtitle']}
    buttonText={t['hero.button']}
  />
  <StatBar labels={{
    universities: t['stats.universities'],
    researchers: t['stats.researchers'],
    groups: t['stats.groups'],
    publications: t['stats.publications'],
    openAccess: t['stats.openAccess']
  }} />
  <ServiceHighlights />
  <ImageGrid />
  <UniversityList 
    collabTitle={t['university.collab']}
    mainTitle={t['university.title']}
    desc={t['university.desc']}
    sponsorsTitle={t['university.sponsors']}
    participantsTitle={t['university.participants']}
  />
  <TechnologyInnovation 
    projectLabel={t['project.label']}
    projectTitle={t['project.title']}
    projectDesc={t['project.desc']}
    originTitle={t['project.origin.title']}
    originDesc={t['project.origin.desc']}
    objectiveTitle={t['project.objective.title']}
    objectiveDesc={t['project.objective.desc']}
    futureTitle={t['project.future.title']}
    futureDesc={t['project.future.desc']}
    frameTitle={t['project.frame.title']}
    frameDesc={t['project.frame.desc']}
  />
  <!-- <ProcessWorkflow /> -->
  <!-- <Testimonials /> -->
  <PremiumCTA />
</BaseLayout>
