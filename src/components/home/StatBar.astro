---
import stats from '../../data/stats.json';

interface Props {
  labels: {
    universities: string;
    researchers: string;
    groups: string;
    publications: string;
    openAccess: string;
  };
}

const { labels } = Astro.props;

const statItems = [
  { value: stats.universities, label: labels.universities },
  { value: stats.researchers, label: labels.researchers },
  { value: stats.groups, label: labels.groups },
  { value: stats.publications, label: labels.publications },
  { value: stats.openAccess, label: labels.openAccess },
];
---

<section class="py-12 bg-white border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 lg:gap-4">
      {statItems.map((item, index) => (
        <div class={`flex flex-col items-center text-center ${index !== statItems.length - 1 ? 'lg:border-r lg:border-gray-100' : ''}`}>
          <span class="text-3xl lg:text-4xl font-bold text-blue-900 mb-2 tracking-tight">
            {item.value}
          </span>
          <span class="text-sm font-medium text-slate-600 uppercase tracking-wide">
            {item.label}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
